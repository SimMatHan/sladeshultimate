rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == "simonmathiashansen@gmail.com";
    }

    // Validate Sladesh challenge payload
    function isValidSladeshChallenge() {
      return request.resource.data.keys().hasAll(['senderId', 'recipientId', 'status', 'createdAt', 'updatedAt']) &&
             request.resource.data.senderId is string &&
             request.resource.data.recipientId is string &&
             request.resource.data.status is string &&
             request.resource.data.createdAt is timestamp &&
             request.resource.data.updatedAt is timestamp;
    }
    
    match /drinkVariations/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document and basic info of other users
      allow read: if isAuthenticated();
      
      // Users can only write to their own document
      allow create: if isOwner(userId) && 
                      request.resource.data.keys().hasAll(['uid', 'email', 'fullName']) &&
                      request.resource.data.uid == userId &&
                      request.resource.data.email == request.auth.token.email;
      
      allow update, delete: if isOwner(userId) ||
        (
          // Allow narrow update for sladeshReceived counter by others (e.g. sender)
          isAuthenticated() &&
          request.resource.data.keys().hasOnly(['sladeshReceived', 'updatedAt']) &&
          request.resource.data.sladeshReceived == ((resource.data.sladeshReceived == null ? 0 : resource.data.sladeshReceived) + 1)
        );
      
      // User subcollections
      match /drinks/{drinkId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isOwner(userId);
      }
      
      match /checkIns/{checkInId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isOwner(userId);
      }
      
      match /sladesh/{sladeshId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && 
                         (request.resource.data.recipientId == request.auth.uid ||
                          request.resource.data.senderId == request.auth.uid);
        allow update, delete: if isOwner(userId);
      }

      // Web push subscriptions per user/device
      match /pushSubscriptions/{subscriptionId} {
        allow read: if isOwner(userId);
        allow create, update, delete: if isOwner(userId);
      }
    }

    // Sladesh challenges (top-level collection)
    match /sladeshChallenges/{challengeId} {
      // Authenticated users can read their challenges
      allow read: if isAuthenticated();

      // Sender can create a challenge
      allow create: if isAuthenticated() &&
        isValidSladeshChallenge() &&
        request.resource.data.senderId == request.auth.uid;

      // Sender or receiver can update status/proof
      allow update: if isAuthenticated() &&
        resource.data.keys().hasAll(['senderId', 'recipientId']) &&
        (resource.data.senderId == request.auth.uid || resource.data.recipientId == request.auth.uid);
    }
    
    // Channels collection
    // Minimal model: channels act as filters, all authenticated users can read them
    match /channels/{channelId} {
      // All authenticated users can read channels (they're just filters)
      allow read: if isAuthenticated();
      
      // Authenticated users can create channels
      allow create: if isAuthenticated() &&
                      request.resource.data.keys().hasAll(['name', 'isDefault']) &&
                      request.resource.data.name is string &&
                      request.resource.data.isDefault is bool;
      
      // Allow updates (for admin use, can be restricted later)
      allow update: if isAuthenticated();
      
      // Allow deletes (for admin use, can be restricted later)
      allow delete: if isAuthenticated();
      
      // Channel subcollections (comments)
      match /comments/{commentId} {
        // All authenticated users can read comments in channels
        allow read: if isAuthenticated();
        // Users can create comments
        allow create: if isAuthenticated() && 
                         request.resource.data.userId == request.auth.uid;
        // Users can update their own comments
        allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
        // Users can delete their own comments
        allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
      
      // Channel subcollections (messages)
      match /messages/{messageId} {
        // Only authenticated users who are members of the channel can read messages
        // Note: We check channel membership via joinedChannelIds in user document
        // Since Firestore rules can't directly query user document in this context,
        // we allow all authenticated users to read (membership check happens in service layer)
        allow read: if isAuthenticated();
        
        // Users can create messages if:
        // - They are authenticated
        // - The userId in the message matches their auth.uid
        // - Required fields are present
        allow create: if isAuthenticated() && 
                         request.resource.data.userId == request.auth.uid &&
                         request.resource.data.keys().hasAll(['userId', 'userName', 'content', 'channelId', 'timestamp']) &&
                         request.resource.data.userName is string &&
                         request.resource.data.content is string &&
                         request.resource.data.channelId == channelId;
        
        // Users can update their own messages (for editing)
        allow update: if isAuthenticated() && 
                         resource.data.userId == request.auth.uid &&
                         request.resource.data.userId == request.auth.uid;
        
        // Users can delete their own messages
        allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
        
        // Note: Quota validation happens in the service layer (messageService.js)
        // Firestore rules focus on authentication and basic data validation
      }
    }
    
    // Theme Drops collection
    match /themeDrops/{themeDropId} {
      // All authenticated users can read theme drops (they filter by targetUserIds in the app)
      allow read: if isAuthenticated();
      
      // Only admins can create theme drops
      allow create: if isAdmin() &&
                      request.resource.data.keys().hasAll(['themeName', 'emojis', 'targetUserIds', 'createdAt', 'createdBy']) &&
                      request.resource.data.themeName is string &&
                      request.resource.data.emojis is list &&
                      request.resource.data.targetUserIds is list &&
                      request.resource.data.createdBy == request.auth.uid;
      
      // No updates or deletes needed for theme drops (they're ephemeral)
      allow update, delete: if false;
    }
    
    // Stats collection
    match /stats/{statId} {
      // Everyone can read stats
      allow read: if isAuthenticated();
      
      // Only admins can write (in production, implement admin check)
      // For now, allow authenticated users to update (should be restricted in production)
      allow write: if isAuthenticated();
    }
    
    // Stress Beacons collection
    match /stressBeacons/{beaconId} {
      // Anyone can read active beacons
      allow read: if isAuthenticated() && resource.data.active == true;
      
      // Authenticated users can create beacons
      allow create: if isAuthenticated() &&
                      request.resource.data.createdBy == request.auth.uid &&
                      request.resource.data.active == true &&
                      request.resource.data.expiresAt > request.time &&
                      request.resource.data.keys().hasAll(['createdBy', 'creatorName', 'latitude', 'longitude', 'createdAt', 'expiresAt', 'active']) &&
                      request.resource.data.latitude is number &&
                      request.resource.data.longitude is number &&
                      request.resource.data.latitude >= -90 && request.resource.data.latitude <= 90 &&
                      request.resource.data.longitude >= -180 && request.resource.data.longitude <= 180;
      
      // Only creator can update their own beacons
      allow update: if isAuthenticated() &&
                       resource.data.createdBy == request.auth.uid;
      
      // Only creator can delete their own beacons
      allow delete: if isAuthenticated() &&
                       resource.data.createdBy == request.auth.uid;
    }
  }
}
